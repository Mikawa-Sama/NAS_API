{
  "compilerOptions": {
    "target": "ES2020",              // version JS générée
    "module": "CommonJS",            // pour Node.js
    "rootDir": "./src",              // dossier source
    "outDir": "./dist",              // dossier compilé
    "strict": true,                  // vérifications strictes TypeScript
    "moduleResolution": "node",
    "esModuleInterop": true,         // permet import/export interop
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
